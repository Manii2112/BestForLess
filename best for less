<div class="store-container">
  <h1>Online Store</h1>

  <div class="product-grid">
    <div class="product-card">
      <img src="https://via.placeholder.com/150" alt="Product 1">
      <h3>Product 1</h3>
      <p>$10</p>
      <button>Add to Cart</button>
    </div>
    <div class="product-card">
      <img src="https://via.placeholder.com/150" alt="Product 2">
      <h3>Product 2</h3>
      <p>$20</p>
      <button>Add to Cart</button>
    </div>
  </div>

  <div class="cart-actions">
    <button class="contact-seller">Contact Seller</button>
  </div>

  <div class="payment-section">
    <h2>Select Payment Method</h2>
    <label><input type="radio" name="payment" checked> TNG eWallet</label>
    <label><input type="radio" name="payment"> Cash on Delivery (COD)</label>
    <button class="checkout-btn">Checkout</button>
  </div>
</div>

<script>
    // Cart array to store added products
    const cart = [];
  
    // Handle Add to Cart button
    document.querySelectorAll('.product-card button').forEach((btn, index) => {
      btn.addEventListener('click', () => {
        const productCard = btn.closest('.product-card');
        const productName = productCard.querySelector('h3').innerText;
        const productPrice = productCard.querySelector('p').innerText;
  
        cart.push({ name: productName, price: productPrice });
        alert(${productName} added to cart.);
      });
    });
  
    // Handle Checkout
    document.querySelector('.checkout-btn').addEventListener('click', () => {
      if (cart.length === 0) {
        alert('Your cart is empty.');
        return;
      }
  
      const paymentMethod = document.querySelector('input[name="payment"]:checked').nextSibling.textContent.trim();
    let message = "Items in cart:\n";

    cart.forEach(item => {
      message += - $item.name: $item.price\n;
    });

    message += nSelected payment method: ${paymentMethod};
    alert(message);
  });

  // Handle Contact Seller
  document.querySelector('.contact-seller').addEventListener('click', () => {
    alert('Seller contacted! (This could open a form or email in real use.)');
  });
</script>